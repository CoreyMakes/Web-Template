.sidebar.clearfix
     .logo.col-3.mx-auto.mt4
          %a{href: "/"}
               %img.fit{alt: "Noon Pacific", src: "#{image_path("noonpacific.svg")}"}
     .sidebar__nav
          %ul.list-reset.center
               %li
                    %a{href: "/"}
                         mixtapes
               %li 
                    %a{href: "/collections"}
                         collections
               %li 
                    %a{href: "#"}
                         video
               %li 
                    %a{href: "#"}
                         events
               %li 
                    %a{href: "#"}
                         label
               %li 
                    %a{href: "http://shop.noonpacific.com"}
                         shop
               %li 
                    %a{href: "/about"}
                         about
               %li.mt2
                    %a.inline-block.px1{href: "#"}
                         %i.fa.fa-apple
                    %a.inline-block.px1{href: "#"}
                         %i.fa.fa-android
     .audio-player{'ng-controller' => 'AudioCtrl'}
          .audio-player__track-info.center
               .audio-player__artist
                    %p.m0.truncate(ng-bind="currentTrack.title")
               .audio-player__song.mt0
                    %p.m0.grey.truncate(ng-bind="currentTrack.artist_description")
          .audio-player__controls.center.mt3.mb3
               .audio-player__volume.inline-block
                    %i.fa.fa-volume-up
               .audio-player__play.inline-block
                    %a{href: "", "ng-click" => "PlayPauseClick()"}
                         %i.fa.fa-play.mx3.h1{"ng-class" => "{'fa-play': audio.state !== 'playing', 'fa-pause': audio.state !== 'stopped'}"}
               .audio-player__skip.inline-block
                    %a{href: "", "ng-click" => "audio.PlayNextSong()"}
                         %i.fa.fa-forward
          #progress-bar
               #progress


